<h1 align="center"> Signup for Alpha Blog </h1>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => { class: "form-horizontal", role: "form"})  do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Article title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.description_field :description, class: "form-control", placeholder: "Enter description" %>
        </div>
      </div>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
